<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarSize="0dp"
    tools:context=".CreateCampaignActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            app:cardBackgroundColor="@color/red"
            app:cardElevation="6sp"
            app:cardCornerRadius="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="12sp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/red"
                    app:tint="@color/white"
                    android:src="@drawable/round_arrow_back_24" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Create Campaign"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginStart="12sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="12sp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/coin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:gravity="center_vertical|end"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/white" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/round_monetization_on_24"
                        android:layout_gravity="center"
                        app:tint="@color/white"
                        android:layout_marginStart="6sp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/video"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="10sp"
            app:cardCornerRadius="8sp">

            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:id="@+id/youtube_player_view_fragment_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:enableAutomaticInitialization="true"
                app:handleNetworkEvents="true" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Campaign Settings"
            android:padding="12sp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@color/dark_grey" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/dark_grey"
            android:layout_marginStart="12sp"
            android:layout_marginEnd="12sp"
            android:layout_marginBottom="12sp" />

        <LinearLayout
            android:id="@+id/all_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12sp"
                    android:textSize="16sp"
                    android:text="Expected Subscribers:" />

                <TextView
                    android:id="@+id/pickerSubAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12sp"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:textSize="15sp"
                    android:drawableTint="@color/white"
                    android:drawablePadding="12sp"
                    android:drawableRight="@drawable/baseline_keyboard_arrow_down_24"
                    android:background="@drawable/background"
                    android:backgroundTint="@color/red"
                    android:layout_marginStart="12sp"
                    android:padding="12sp"
                    android:text="10" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="6sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12sp"
                    android:textSize="16sp"
                    android:text="Expected Likes:" />

                <TextView
                    android:id="@+id/likeAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/dark_grey"
                    android:textSize="15sp"
                    android:background="@drawable/background"
                    android:backgroundTint="@color/light_grey"
                    android:layout_marginStart="12sp"
                    android:padding="12sp"
                    android:text="10" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6sp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12sp"
                    android:textSize="16sp"
                    android:text="Expected Views:" />

                <TextView
                    android:id="@+id/viewsAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/dark_grey"
                    android:textSize="15sp"
                    android:background="@drawable/background"
                    android:backgroundTint="@color/light_grey"
                    android:layout_marginStart="12sp"
                    android:padding="12sp"
                    android:text="10" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/likes_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12sp"
                    android:textSize="16sp"
                    android:text="Expected Likes:" />

                <TextView
                    android:id="@+id/pickerLikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12sp"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:textSize="15sp"
                    android:drawableTint="@color/white"
                    android:drawablePadding="12sp"
                    android:drawableRight="@drawable/baseline_keyboard_arrow_down_24"
                    android:background="@drawable/background"
                    android:backgroundTint="@color/red"
                    android:layout_marginStart="12sp"
                    android:padding="12sp"
                    android:text="10" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="6sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12sp"
                    android:textSize="16sp"
                    android:text="Expected Views:" />

                <TextView
                    android:id="@+id/likeView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12sp"
                    android:textColor="@color/dark_grey"
                    android:textSize="15sp"
                    android:background="@drawable/background"
                    android:backgroundTint="@color/light_grey"
                    android:layout_marginStart="12sp"
                    android:padding="12sp"
                    android:text="10" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/views_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12sp"
                    android:textSize="16sp"
                    android:text="Expected Views:" />

                <TextView
                    android:id="@+id/pickerViews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12sp"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:textSize="15sp"
                    android:drawableTint="@color/white"
                    android:drawablePadding="12sp"
                    android:drawableRight="@drawable/baseline_keyboard_arrow_down_24"
                    android:background="@drawable/background"
                    android:backgroundTint="@color/red"
                    android:layout_marginStart="12sp"
                    android:padding="12sp"
                    android:text="10" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="12sp"
                android:textSize="16sp"
                android:text="Time required (seconds):" />

            <TextView
                android:id="@+id/pickerTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12sp"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:drawableTint="@color/white"
                android:drawablePadding="12sp"
                android:drawableRight="@drawable/baseline_keyboard_arrow_down_24"
                android:background="@drawable/background"
                android:backgroundTint="@color/red"
                android:layout_marginStart="12sp"
                android:padding="12sp"
                android:text="60" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/dark_grey"
            android:layout_margin="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/vipLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12sp"
                    android:textSize="16sp"
                    android:text="VIP Account (reduce 10%):" />

                <TextView
                    android:id="@+id/upgradeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12sp"
                    android:textColor="@color/dark_grey"
                    android:gravity="center_vertical"
                    android:textSize="15sp"
                    android:background="@drawable/background"
                    android:backgroundTint="@color/light_grey"
                    android:layout_marginStart="12sp"
                    android:padding="12sp"
                    android:text="Upgrade" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12sp"
                    android:textSize="16sp"
                    android:text="Total Coins:" />

                <TextView
                    android:id="@+id/totalCoins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12sp"
                    android:textColor="@color/dark_grey"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:drawablePadding="8sp"
                    android:drawableRight="@drawable/round_monetization_on_24"
                    android:background="@drawable/background"
                    android:backgroundTint="@color/light_grey"
                    android:layout_marginStart="12sp"
                    android:padding="12sp"
                    android:text="10" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Done"
            android:layout_margin="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12sp"
            android:textSize="16sp"
            android:text="@string/warning" />

    </LinearLayout>


</androidx.core.widget.NestedScrollView>